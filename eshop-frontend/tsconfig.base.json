{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env/*": ["environments/*"],
      "@eshop-frontend/orders": ["libs/orders/src/index.ts"],
      "@eshop-frontend/product": ["libs/product/src/index.ts"],
      "@eshop-frontend/ui": ["libs/ui/src/index.ts"],
      "@eshop-frontend/users": ["libs/users/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
